<div class="card border-dark mt-3">
  <div class="card-body">
    <h3 class="card-title">Add Post</h3>
    <form action="/projects/<%= project_id %>/posts/add" method="POST" class="needs-validation">
      <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control <%= errors.title ? 'is-invalid' : '' %>" value="<%= typeof title !== 'undefined' ? title : '' %>"/>
        <% if (errors.title) { %>
          <div class="text-danger"><%= errors.title %></div>
        <% } %>
      </div>
      <div class="form-group">
        <label for="body">Content</label>
        <textarea class="form-control" name="body" id="body" cols="30" rows="10">
    <%= typeof commentBody !== 'undefined' ? commentBody : '' %>
        </textarea>
      </div>
      <div class="d-flex">
        <a class="btn btn-primary mr-3" href="/projects/<%= project_id %>/posts">Cancel</a>
        <input type="submit" value="Add Post" class="btn btn-success btn-block">
      </div>
    </form>
  </div>
</div>