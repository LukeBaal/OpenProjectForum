<div class="d-flex justify-content-between mb-3">
  <h3>Forum</h3>
  <a class="btn btn-success" href="/projects/<%= project_id %>/posts/add">
    <i class="fas fa-plus"></i>
    Add Post
  </a>
</div>

<% posts.forEach(post => { %>
  <div class="card bg-secondary mb-3">
    <div class="card-body">
      <div class="d-flex justify-content-between">          
        <a class="card-title" href="/projects/<%= project_id %>/posts/<%= post.id %>"><%= post.title %></a>
        <div>
          <div class="d-flex justify-content-between">
            <span class ="mt-2 mr-2">
              <i class="fas fa-user"></i>
              <%= post.User.username %>
            </span>
            <% if (post.User.id == user.id) { %>
              <form method="POST" action="/projects/<%= project_id %>/posts/<%= post.id %>?_method=DELETE">
                <div class="btn-group">
                  <a class="btn btn-warning" href="/projects/<%= project_id %>/posts/edit/<%= post.id %>">
                    <i class="fas fa-pencil-alt"></i>
                  </a>
                  <button class="btn btn-danger" type="submit">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </form>
            <% } %>
          </div>
        </div>
      </div>
      <span class="text-muted text-right mt-2">Posted: <%= new Date(post.created_at).toLocaleString() %></span>
    </div>
  </div>
<% }); %>
