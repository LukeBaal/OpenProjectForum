<h1>All Projects</h1>
<% projects.forEach(project => { %>
<div class="card mb-3 border-dark">
  <div class="card-body">
    <div class="d-flex justify-content-between">
      <h3><%= project.title %></h3>
      <% if (user.id == project.User.id) {%>
        <form action="/projects/<%= project.id %>?_method=DELETE" method="POST">
          <div class="btn-group">
            <a href="/projects/edit/<%= project.id %>" class="btn btn-warning">
              <i class="fas fa-pencil-alt"></i>
            </a>
            <button type="submit" class="btn btn-danger">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </form>
      <% } %>
    </div>
      <p class="headline text-muted">Author: <%= project.User.username %></p>
    <% if (project.description) { %>
      <p class="card-text"><%= project.description %></p>
    <% } %>
  </div>
    <div class="card-body">
      <a href="/projects/<%= project.id %>/posts" class="card-link">
        <i class="fas fa-comments"></i>
        Forum
      </a>
      <% if (project.github) { %>
        <a href="<%= project.github %>" class="card-link">
          <i class="fab fa-github"></i>
          GitHub
        </a>
      <% } %>
    </div>
</div>
<% }); %>