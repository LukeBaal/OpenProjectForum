<div class="card mt-3 border-dark">
  <div class="card-body">
    <h3 class="card-title">Edit Comment</h3>
    <form action="/projects/<%= project_id %>/posts/<%= post_id %>/comments/edit/<%= comment.id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" value="<%= typeof comment.title !== 'undefined' ? comment.title : '' %>"/>
        <% if (errors.title) { %>
          <div class="text-danger"><%= errors.title %></div>
        <% } %>
      </div>
      <div class="form-group">
        <label for="body">Comment</label>
        <textarea class="form-control" name="body" id="body" cols="30" rows="10">
    <%= typeof comment.body !== 'undefined' ? comment.body : '' %>
        </textarea>
      </div>
      <div class="d-flex">
        <a class="btn btn-primary mr-3" href="/projects/<%= project_id %>/posts/<%= post_id %>">Cancel</a>
        <input type="submit" value="Edit Comment" class="btn btn-warning btn-block">
      </div>
    </form>
  </div>
</div>