<h1 class="card-title">Edit Project</h1>
<form action="/projects/edit/<%= id %>/?_method=PUT" method="POST" class="needs-validation">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control <%= errors.title ? 'is-invalid' : '' %>" name="title" id="title" value="<%= typeof title !== 'undefined' ? title : ''%>">
    <% if (errors.title) { %>
    <div class="text-danger"><%= errors.title %></div>
    <% } %>
  </div>

  <div class="form-group">
    <label for="github">GitHub</label>
    <input type="text" class="form-control" name="github" id="github" value="<%= typeof github !== 'undefined' ? github : '' %>">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="desciption" cols="30" rows="5" class="form-control">
<% if (typeof description !== 'undefined') { %>
<%= description -%>
<% } %>    
    </textarea>
  </div>

  <div class="d-flex">
    <a class="btn btn-primary mr-3" href="/projects">Cancel</a>
    <input type="submit" value="Edit Project" class="btn btn-warning btn-block">
  </div>
</form>