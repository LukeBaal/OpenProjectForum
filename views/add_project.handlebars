<h1 class="card-title">Add Project</h1>
<form action="/projects/add" method="POST" class="needs-validation">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control {{#if errors.title}}is-invalid{{/if}}" name="title" id="title" value={{title}}>
    {{#if errors.title}}
    <div class="text-danger">{{errors.title}}</div>
    {{/if}}
  </div>

  <div class="form-group">
    <label for="github">GitHub</label>
    <input type="text" class="form-control" name="github" id="github" value={{github}}>
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" name="description" id="description" value={{description}}>
  </div>

  <input type="submit" class="btn btn-primary btn-block" value="Register" />
</form>