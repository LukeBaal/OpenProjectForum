<h3>Forum</h3>
<% posts.forEach(post => { %>
  <div class="card bg-secondary mb-3">
    <div class="card-body">
      <div class="d-flex justify-content-between">          
        <h3 class="card-title"><%= post.title %></h3>
        <span class="ml-3 mt-2">
          <i class="fas fa-user"></i>
          <%= post.user.username %>
        </span>
      </div>
      <ul class="list-group">
        <div class="list-group-item">ID: <%= post.id %></div>
        <div class="list-group-item">Posted: <%= post.created_at %></div>
        <div class="list-group-item">Updated: <%= post.updated_at %></div>
        <div class="list-group-item">Body: <%= post.body %></div>
        <% if (post.user.id == user.id) { %>
        <div class="list-group-item">
          <form method="POST" action="/projects/<%= project_id %>/forum/<%= post.id %>?_method=DELETE">
            <div class="btn-group">
              <a class="btn btn-warning" href="/projects/<%= project_id %>/forum/edit/<%= post.id %>">
                <i class="fas fa-pencil-alt"></i>
              </a>
              <button class="btn btn-danger" type="submit">
                <i class="fas fa-times"></i>
              </button>
            </div>
          </form>
        </div>
        <% } %>
      </ul>
    </div>
  </div>
<% }); %>

<% if (typeof user !== 'undefined') { %>
<div class="card bg-secondary mt-3">
  <div class="card-body">
    <h3 class="card-title">Add Post</h3>
    <form action="/projects/<%= project_id %>/forum/add" method="POST" class="needs-validation">
      <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" value="<%= typeof title !== 'undefined' ? title : '' %>"/>
        <% if (errors.title) { %>
          <div class="text-danger"><%= errors.title %></div>
        <% } %>
      </div>
      <div class="form-group">
        <label for="body">Comment</label>
        <textarea class="form-control" name="body" id="body" cols="30" rows="10">
    <%= typeof body !== 'undefined' ? body : '' %>
        </textarea>
      </div>
      <input type="submit" value="Add Post" class="btn btn-success btn-block">
    </form>
  </div>
</div>
<% } %>
