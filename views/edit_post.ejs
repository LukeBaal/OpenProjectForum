<div class="card border-dark mt-3">
  <div class="card-body">
    <h3 class="card-title">Edit Post</h3>
    <form action="/projects/<%= project_id %>/posts/edit/<%= id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" value="<%= title %>"/>
        <% if (errors.title) { %>
          <div class="text-danger"><%= errors.title %></div>
        <% } %>
      </div>
      <div class="form-group">
        <label for="body">Content</label>
        <textarea class="form-control" name="body" id="body" cols="30" rows="10">
    <%= typeof postBody !== 'undefined' ? postBody : '' %>
        </textarea>
      </div>
      <input type="submit" value="Edit Post" class="btn btn-warning btn-block">
    </form>
  </div>
</div>