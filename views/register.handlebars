<h1 class="card-title">Register</h1>
<form action="/user/register" method="POST" class="needs-validation">
  <div class="form-group">
    <label for="username">Username</label>
    <input type="text" class="form-control {{#if errors.username}}is-invalid{{/if}}" name="username" id="username"
      value={{username}}>
    {{#if errors.username}}
    <div class="text-danger">{{errors.username}}</div>
    {{/if}}
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input type="text" class="form-control {{#if errors.password}}is-invalid{{/if}}" name="password" id="password"
      value={{password}}>
    {{#if errors.password}}
    <div class="text-danger">{{errors.password}}</div>
    {{/if}}
  </div>

  <div class="form-group">
    <label for="password2">Confirm Password</label>
    <input type="text" class="form-control {{#if errors.password2}}is-invalid{{/if}} {{#if errors.passwordmatch}}is-invalid{{/if}}"
      name="password2" id="password2" value={{password2}}>
    {{#if errors.password2}}
    <div class="text-danger">{{errors.password2}}</div>
    {{/if}}
    {{#if errors.passwordmatch}}
    <div class="text-danger">{{errors.passwordmatch}}</div>
    {{/if}}
  </div>

  <div class="form-group">
    <label for="email">Contact Email</label>
    <input type="text" class="form-control" name="email" id="email" value={{email}}>
  </div>

  <input type="submit" class="btn btn-primary btn-block" value="Register" />
</form>